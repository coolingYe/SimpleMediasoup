<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_chat_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tv_chat_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/buddy" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/card_chat_user_avatar"
        app:layout_constraintTop_toTopOf="@+id/card_chat_user_avatar"
        tools:text="xxx" />

    <TextView
        android:id="@+id/tv_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/shape_char_content_frame"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/card_chat_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_name" />

</androidx.constraintlayout.widget.ConstraintLayout>